<resources>


    <style name="text_style_1">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/test1</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nnwindow_bottom_anim" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/nnwindow_bottom_anim_in</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/nnwindow_bottom_anim_out</item>

    </style>

    <declare-styleable name="AutoSizeTextView">
        <attr name="autoMaxTextSize" format="dimension" />
        <attr name="autoMinTextSize" format="dimension" />
        <attr name="autoTextSizeStep" format="dimension" />
        <attr name="maxWidthPercent" format="float" />
    </declare-styleable>


    <style name="text_style">
        <item name="android:textColor">#FF0000</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">--</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>